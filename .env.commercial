# 상용 AI 에이전트 시스템 v1.0 환경 변수
# 실제 운영 시에는 이 파일을 .env로 복사하고 실제 값을 입력하세요

# Flask 설정
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
PORT=5000

# AI 모델 API 키 (필요한 것만 설정)
OPENAI_API_KEY=your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# 데이터베이스 설정
DATABASE_PATH=./commercial_ai_agent.db

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE=commercial_ai_agent.log

# 성능 최적화
MAX_CONVERSATION_HISTORY=100
MAX_RESPONSE_LENGTH=1000
REQUEST_TIMEOUT=30

# 보안 설정
CORS_ORIGINS=*
MAX_MESSAGE_LENGTH=2000

# 캐싱 설정
ENABLE_CACHE=True
CACHE_TTL=300

# 모니터링
ENABLE_METRICS=True
METRICS_PORT=9090

# 개발 모드 설정
DEVELOPMENT_MODE=True
DEBUG_AI_RESPONSES=False

# 모델 설정
DEFAULT_AI_MODEL=gpt-3.5-turbo
FALLBACK_MODEL=local
USE_LOCAL_MODELS=True

# 사용자 제한
MAX_USERS_CONCURRENT=100
RATE_LIMIT_PER_MINUTE=20
