# HYOJIN.AI 결제 시스템 환경 변수

# Stripe 설정 (실제 키로 교체 필요)
STRIPE_PUBLISHABLE_KEY=pk_test_51234567890abcdef...
STRIPE_SECRET_KEY=sk_test_51234567890abcdef...
STRIPE_WEBHOOK_SECRET=whsec_1234567890abcdef...

# PayPal 설정 (실제 키로 교체 필요)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox  # 또는 live

# 이메일 설정 (실제 SMTP 정보로 교체 필요)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL_USER=support@hyojin.ai
EMAIL_PASSWORD=your_app_password

# 데이터베이스 설정 (실제 DB 연결 정보로 교체 필요)
DATABASE_URL=postgresql://user:password@localhost/hyojin_ai
REDIS_URL=redis://localhost:6379

# 보안 설정
JWT_SECRET_KEY=your-super-secret-jwt-key-here
SESSION_SECRET_KEY=your-session-secret-key

# 서비스 설정
ENVIRONMENT=development  # 또는 production
DEBUG=True
API_BASE_URL=http://localhost:8000
FRONTEND_URL=https://hyojin.ai

# 결제 관련 설정
DEFAULT_CURRENCY=USD
TRIAL_PERIOD_DAYS=7
BILLING_CYCLE=monthly

# 로깅 설정
LOG_LEVEL=INFO
LOG_FILE_PATH=./logs/hyojin_ai.log
